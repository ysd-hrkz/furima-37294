<%= render "shared/header" %>
<div class='item-contents'>
    <h2 class='title'>商品検索結果</h2>
    <div class="subtitle" >
      検索商品
    </div>
    <ul class='item-lists'>
      <% @items.each do |item|%>
        <li class='list'>
          <%= link_to item_path(id: item.id) do %>
          <div class='item-img-content'>
            <%= image_tag item.image, class: "item-img" if item.image.attached? %>

            <% if item.order != nil%>
            <div class='sold-out'>
              <span>Sold Out!!</span>
            </div>
            <% end %>

          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= item.name %>
            </h3>
            <div class='item-price'>
              <span><%= item.price %>円<br><%= item.shipping_fee.name %></span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
</div>
<%= render "shared/footer" %>